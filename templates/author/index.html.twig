{% extends 'base.html.twig' %}
{% block body %}

<div class="container-fluid">
    <div class="row no-gutters">
        <div class="col-12">
            <h4 class="display-4 text-left">
                <a class="btn btn-success" href="{{ path('author_create') }}">Добавить автора</a><br>
            </h4>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row no-gutters justify-content-center">
        <div class="col-8">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-7">
                <table class="table table-hover table-sm">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Имя</th>
                        <th scope="col">Фамилия</th>
                        <th scope="col">Редактировать</th>
                        <th scope="col">Список</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for authors_item in authors %}
                        <tr>
                            <td>{{ authors_item.name}}</td>
                            <td>{{ authors_item.surname}}</td>
                            <td><a class="btn btn-primary btn-sm" href="{{ path('author_update', {'id':authors_item.id}) }}">Редактировать автора</a></td>
                            <td><a class="btn btn-info btn-sm" href="{{ path('books', {'id':authors_item.id}) }}">Список книг</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}