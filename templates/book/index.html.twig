{% extends 'base.html.twig' %}
{% block body %}

<div class="container-fluid">
    <div class="row no-gutters">
        <div class="col-12">
            <h3>Страница автора: {{ author.name}} {{ author.surname}}</h3>
            <h4 class="display-4 text-left">
                <a class="btn btn-success" href="{{ path('book_create', {'id':author.id}) }}">Добавить книгу</a><br>
            </h4>
        </div>
    </div>
</div>
    <div class="container-fluid">
        <div class="row no-gutters justify-content-center">
            <div class="col-8">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-7">
                <table class="table table-hover table-sm">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Название</th>
                        <th scope="col">Год</th>
                        <th scope="col">Редактировать</th>
                        <th scope="col">Удалить</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for books_item in books %}
                        <tr>
                            <td>{{ books_item.title}}</td>
                            <td>{{ books_item.year}}</td>
                            <td><a class="btn btn-primary btn-sm" href="{{ path('book_update', {'book_id':books_item.id, 'id':author.id}) }}">Редактировать</a></td>
                            <td><a class="btn btn-danger btn-sm" href="{{ path('book_delete', {'book_id':books_item.id, 'id':author.id}) }}">Удалить книгу</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
